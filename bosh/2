package bosh

import (
	"github.com/cloudfoundry/bosh-bootloader/storage"
	yaml "gopkg.in/yaml.v2"
)

type jumpboxVariables struct {
	JumpboxSSH struct {
		PrivateKey string `yaml:"private_key"`
	} `yaml:"jumpbox_ssh"`
}

type SSHKeyGetter struct{}

func NewSSHKeyGetter() SSHKeyGetter {
	return SSHKeyGetter{}
}

func (j SSHKeyGetter) Get(state storage.State) (string, error) {
	var vars []byte

	if state.Jumpbox.Enabled {
		vars = []byte(state.Jumpbox.Variables)
	} else {
		vars = []byte(state.BOSH.Variables)
	}

	if len(vars) == 0 {
		return state.KeyPair.PrivateKey, nil
	}

	var variables jumpboxVariables
	err := yaml.Unmarshal(vars, &variables)
	if err != nil {
		panic(err)
	}

	return variables.JumpboxSSH.PrivateKey, nil

}
